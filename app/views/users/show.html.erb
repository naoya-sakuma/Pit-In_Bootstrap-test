<div class="container user_container">
  <div class="row">
    <div class="user_icon img-thumbnail float-left">
      <% if current_user.icon.present? %>
        <%= image_tag current_user.icon.url %>
      <% else %>
        <p>プロフィール画像を登録してください。</p>
      <% end %>
    </div>

    <div class="user_info col-5">
      <h4><%= current_user.name %></h4>
      <p id="self_introduction">自己紹介</p>
      <p class="card"><%= current_user.introduction %></p>
      <button class="btn btn-outline-secondary"><%= link_to "編集", edit_user_registration_path %></button>
    </div>
  </div>
</div>
